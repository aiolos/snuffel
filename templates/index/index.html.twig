{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex mb-4">
        <div class="w-1/3"></div>
        <div class="w-full max-w-xs">
            <h1 class="font-bold text-xl">Voer snuffelid en datum in</h1>
            <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" action="/" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="sniffer">
                        Snuffel ID (3567 ...)
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="sniffer" name="sniffer" type="text" placeholder="3567 ...">
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="date">
                        Datum (YYYY-MM-DD)
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="date" name="date" type="text" placeholder="YYYY-MM-DD">
                </div>
                <div class="flex items-center justify-between">
                    <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit" value="Inlezen">
                </div>
            </form>
            <p class="text-center text-gray-500 text-xs">

            </p>
        </div>
        <div class="w-1/3"></div>
    </div>
{% endblock %}