{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-xl font-bold">Ingelezen voor: <a href="/sniffer/{{ sniffer }}/show/{{ date|date("Y-m-d") }}/{{ date|date("Y-m-d") }}">{{ date|date("d-m-Y") }}</a></h1>
    <h1 class="text-lg font-bold">Aantal ingelezen punten {{ measurements }}</h1>
    <h1 class="text-lg font-bold">Reeds gevonden punten {{ foundMeasurements }}</h1>

    <a class="inline-block border border-blue-500 rounded py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white" href="/sniffer/{{ sniffer }}/snif/{{ yesterday|date("Y-m-d") }}">Dag eerder ({{ yesterday|date("d-m-Y") }})</a>
    |
    <a class="inline-block border border-blue-500 rounded py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white" href="/sniffer/{{ sniffer }}/snif/{{ tomorrow|date("Y-m-d") }}">Dag later ({{ tomorrow|date("d-m-Y") }})</a>
{% endblock %}
